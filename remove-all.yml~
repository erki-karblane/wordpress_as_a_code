---
- name: Delete the wordpress EC2 instance
  hosts: localhost
  gather_facts: true  
  vars_files:
    - "./group_vars/vars.yml" # variables for the ec2 name, region, ami,etc

  tasks:
  
    - name: Gather information about a particular instance using ID
      community.aws.ec2_instance_info:
        region: "{{ region }}"
        filters:
          "tag:Name": wordpress        
      register: wordpress_ec2

    - name: Remove the elastic IP
      community.aws.ec2_eip:
        in_vpc: true
        device_id: "{{ wordpress_ec2.instances[0].instance_id }}"
        release_on_disassociation: yes
        state: absent

      
    - name: Terminate instances that were previously launched
      amazon.aws.ec2:
        region: "{{ region }}"
        state: 'absent'
        wait: yes
        instance_ids: '{{ wordpress_ec2.instances[0].instance_id }}'

    - name: Gather information about a particular VPC using VPC ID
      amazon.aws.ec2_vpc_net_info:
        region:  "{{ region }}"
        vpc_ids: "{{ wordpress_ec2.instances[0].vpc_id }}"
#        vpc_ids: vpc-01aa0210eff725a02
      register: vpc
    
    - name: remove subnet
      amazon.aws.ec2_vpc_subnet:
        state: absent
        vpc_id: "{{ vpc.vpcs[0].vpc_id }}"
        cidr: "{{ wordpress_subnet }}"
        wait: yes
        
    - name: remove an IGW 
      community.aws.ec2_vpc_igw:
#        vpc_id: vpc-01af85e69606443b9        
        vpc_id: "{{ vpc.vpcs[0].vpc_id }}"
        state: absent   

    - name: Remove security groups
      amazon.aws.ec2_group:
        state: absent
        name: "{{ sg_name }}"
        region: "{{ region }}"
        rules:
        - proto: tcp
          ports: 22
        - proto: tcp
          ports:
            - 80
            - 22
          cidr_ip: 0.0.0.0/0


    - name: Gather information about VPC route table
      community.aws.ec2_vpc_route_table_info:
        region: "{{ region }}"
        filters:
#          vpc-id: vpc-01af85e69606443b9
          vpc_id: "{{ vpc.vpcs[0].vpc_id }}"
      register: routes
      
    - name: delete route table entry 
      community.aws.ec2_vpc_route_table:
        vpc_id: "{{ vpc.vpcs[0].vpc_id }}"
#        vpc_id: vpc-01af85e69606443b9
        region: "{{ region }}"
        route_table_id: "{{ routes.route_tables[1].id }}"
        lookup: id
        state: absent

    - name: remove a VPC
      amazon.aws.ec2_vpc_net:
        name: "{{ vpc_name }}"
        cidr_block: 10.10.0.0/16
        region:  "{{ region }}"
        state: absent

      